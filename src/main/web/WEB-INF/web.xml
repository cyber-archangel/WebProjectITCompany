<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>UserAuthenticationFilter</filter-name>
        <filter-class>servlets.filters.UserAuthenticationFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>UserAuthenticationFilter</filter-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/create</url-pattern>
    </filter-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>ManagerServlet</web-resource-name>
            <url-pattern>/manager</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>manager</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>WorkerServlet</web-resource-name>
            <url-pattern>/worker</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>worker</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>worker</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/view/confirmation.jsp</form-login-page>
            <form-error-page>/view/error.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/view/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/view/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/view/error.jsp</location>
    </error-page>

</web-app>